# Application Configuration
# Note: Do not commit .env files to version control.
# This file is an example of the variables required.

# Server Configuration
NODE_ENV=development
PORT=3004
APP_NAME="platform-api-chat"

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_DATABASE=chat_db

# Redis Configuration (for WebSocket adapter and Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT & Authentication Configuration (AWS Cognito)
# These values should be retrieved from the Identity & Access service's configuration
# or a shared parameter store.
COGNITO_USER_POOL_ID=ap-south-1_xxxxxxxx
COGNITO_REGION=ap-south-1
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxx

# AWS Configuration (for SQS/SNS)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SQS_ORDER_EVENTS_QUEUE_URL=https://sqs.ap-south-1.amazonaws.com/123456789012/order-events-chat-queue

# Inter-service Communication
ORDER_SERVICE_URL=http://localhost:3001/api/v1

# Logging Configuration
LOG_LEVEL=debug
# Application Configuration
NODE_ENV=development
PORT=3003

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-ratings-service
JWT_EXPIRATION_TIME=15m

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/ratings_db?schema=public

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS SQS (for consuming OrderDeliveredEvent)
# The queue that subscribes to the main order events topic
SQS_ORDER_DELIVERED_QUEUE_URL=

# AWS SNS (for publishing RatingSubmittedEvent)
# The topic to which this service publishes rating updates
SNS_RATINGS_TOPIC_ARN=
# Application Configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=identity_db

# Redis (Amazon ElastiCache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-key-for-jwt
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_SECRET=your-super-secret-key-for-refresh-token
JWT_REFRESH_TOKEN_EXPIRATION=30d

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=ap-south-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=ap-south-1

# AWS SNS Configuration (for OTP SMS)
SNS_REGION=ap-south-1

# Security & OTP Configuration
OTP_EXPIRY_SECONDS=300
MAX_OTP_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
OTP_RESEND_COOLDOWN_SECONDS=60

# Messaging (SNS/SQS Event Publishing)
USER_LIFECYCLE_EVENTS_TOPIC_ARN=arn:aws:sns:ap-south-1:123456789012:user-lifecycle-events
DATA_PRIVACY_EVENTS_TOPIC_ARN=arn:aws:sns:ap-south-1:123456789012:data-privacy-events

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Observability (e.g., for OpenTelemetry)
OTEL_SERVICE_NAME=platform-api-identity
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
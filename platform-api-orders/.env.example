# Application Configuration
NODE_ENV=development
APP_PORT=3000

# Database Configuration (PostgreSQL)
# Example: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:password@localhost:5432/orders_db

# JWT Configuration (for internal service-to-service communication if needed)
JWT_SECRET=your-secret-key-for-jwt
JWT_EXPIRATION=1h

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS SQS/SNS Configuration
# The queue this service listens to for events (e.g., from Payments service)
ORDER_EVENTS_SQS_QUEUE_URL=
# The SNS topic this service publishes its events to (e.g., OrderPlaced, OrderCancelled)
ORDER_EVENTS_SNS_TOPIC_ARN=

# External Service URLs (for synchronous calls)
CATALOG_SERVICE_URL=http://localhost:3002

# Logging Configuration
LOG_LEVEL=info
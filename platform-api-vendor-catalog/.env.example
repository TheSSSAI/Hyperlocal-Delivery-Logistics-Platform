# Application Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1
SERVICE_NAME=vendor-catalog-service

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=vendor_catalog_db
DB_LOGGING=true

# Redis (Cache & BullMQ)
